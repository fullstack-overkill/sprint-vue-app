.container
  display: flex
  flex-direction: column
  flex-shrink: 0
  min-width: 175px
  min-height: 175px
  border-radius: 8px
  padding: 17px
  user-select none
  cursor pointer
  background-color: #FFFFFF
  box-shadow:  0px 3px 10px rgba(0,0,0, 0.25)
  .header
    display: grid
    grid-template-rows: 1fr
    grid-template-columns: 1fr auto
    flex: 1
  .cta
    display: grid
    grid-template-rows: 1fr
    grid-template-columns: 1fr auto
    color: #6c7081
    span
      display: flex
      align-items: center
      font-size: 16px
      font-weight: 500

.status
  width: 15px
  height: 15px
  border-radius: 100%
  background-color: #fe5f83

h1
  font-size: 18px
  font-weight: 700
